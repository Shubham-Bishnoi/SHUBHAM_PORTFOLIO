def decorative_bg(w, h, seed):
    random.seed(seed)
    circles = []
    for _ in range(10):
        r = random.randint(80, 220)
        cx = random.randint(-100, w+100)
        cy = random.randint(-100, h+100)
        op = random.uniform(0.06, 0.14)
        circles.append(f'<circle cx="{cx}" cy="{cy}" r="{r}" fill="white" opacity="{op:.3f}"/>')
    grid = []
    step = 120
    for x in range(0, w+1, step):
        grid.append(f'<path d="M {x} 0 V {h}" stroke="white" opacity="0.04" stroke-width="2"/>')
    for y in range(0, h+1, step):
        grid.append(f'<path d="M 0 {y} H {w}" stroke="white" opacity="0.04" stroke-width="2"/>')
    return "\n".join(circles + grid)

def chips_svg(chips, x, y, maxw=1000):
    out = []
    cx, cy = x, y
    for ch in chips:
        label = svg_escape(ch)
        width = 14 * len(ch) + 44
        if cx + width > x + maxw:
            cx = x
            cy += 56
        out.append(f'''
        <g transform="translate({cx},{cy})">
          <rect x="0" y="0" width="{width}" height="40" rx="18" fill="rgba(255,255,255,0.10)" stroke="rgba(255,255,255,0.18)"/>
          <text x="22" y="26" font-family="Inter, ui-sans-serif, system-ui" font-size="18" fill="rgba(255,255,255,0.88)">{label}</text>
        </g>
        ''')
        cx += width + 14
    return "\n".join(out)

def keywords(name, short, k=3):
    tokens = re.split(r"[^A-Za-z0-9\+\-]+", (name + " " + short))
    filtered = []
    stop = {"built","using","real","time","multi","agent","agents","system","platform","enterprise","pipeline"}
    for t in tokens:
        if len(t) >= 5 and t.lower() not in stop:
            filtered.append(t)
    # de-dup preserve order
    seen = set()
    out = []
    for t in filtered:
        lt = t.lower()
        if lt not in seen:
            seen.add(lt)
            out.append(t)
    return out[:k]

def make_thumb_svg(use_id, slug, name, category, short):
    w, h = 1200, 800
    c1, c2 = palette_map.get(category, ("#0B1020", "#5965E9"))
    seed = int(hashlib.md5(slug.encode()).hexdigest()[:8], 16)
    icon = pick_icon(slug, category)
    lines = wrap_lines(short, 52)
    bg = decorative_bg(w, h, seed)
    chip_list = [category] + keywords(name, short, 3)
    chips_block = chips_svg(chip_list, 84, 640, maxw=1000)
    text_lines_svg = "".join([
        f'<text x="0" y="{168 + i*40}" font-family="Inter, ui-sans-serif, system-ui" font-size="26" fill="rgba(255,255,255,0.90)">{svg_escape(line)}</text>'
        for i, line in enumerate(lines)
    ])
    svg = f'''<svg xmlns="http://www.w3.org/2000/svg" width="{w}" height="{h}" viewBox="0 0 {w} {h}">
  <defs>
    <linearGradient id="bg" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0" stop-color="{c1}"/>
      <stop offset="1" stop-color="{c2}"/>
    </linearGradient>
    <radialGradient id="glow" cx="70%" cy="30%" r="70%">
      <stop offset="0" stop-color="white" stop-opacity="0.18"/>
      <stop offset="1" stop-color="white" stop-opacity="0"/>
    </radialGradient>
  </defs>
  <rect width="{w}" height="{h}" fill="url(#bg)"/>
  <rect width="{w}" height="{h}" fill="url(#glow)"/>
  {bg}

  <g transform="translate(84,104)">
    <rect x="0" y="0" width="{w-168}" height="{h-208}" rx="44" fill="rgba(0,0,0,0.20)" stroke="rgba(255,255,255,0.16)"/>
  </g>

  <g transform="translate(140,170)">
    {icon_svg(icon, 0, 0, size=116)}
    <text x="152" y="52" font-family="Inter, ui-sans-serif, system-ui" font-size="44" font-weight="700" fill="rgba(255,255,255,0.96)">{svg_escape(name)}</text>
    <text x="152" y="92" font-family="Inter, ui-sans-serif, system-ui" font-size="22" font-weight="500" fill="rgba(255,255,255,0.76)">{svg_escape(category)} • Use Case {use_id}</text>
    {text_lines_svg}
  </g>

  {chips_block}
</svg>'''
    return svg

def make_collage_svg(use_id, slug, name, category, variant):
    w, h = 1600, 1000
    c1, c2 = palette_map.get(category, ("#0B1020", "#5965E9"))
    seed = int(hashlib.md5(slug.encode()).hexdigest()[:8], 16) + variant*7
    icon = pick_icon(slug, category)
    bg = decorative_bg(w, h, seed)

    header = f'''
    <g transform="translate(84,78)">
      <rect x="0" y="0" width="{w-168}" height="122" rx="34" fill="rgba(0,0,0,0.22)" stroke="rgba(255,255,255,0.16)"/>
      <g transform="translate(28,18)">
        {icon_svg(icon, 0, 0, size=84)}
        <text x="110" y="52" font-family="Inter, ui-sans-serif, system-ui" font-size="36" font-weight="700" fill="rgba(255,255,255,0.96)">{svg_escape(name)}</text>
        <text x="110" y="86" font-family="Inter, ui-sans-serif, system-ui" font-size="20" fill="rgba(255,255,255,0.74)">{svg_escape(category)} • Use Case {use_id} • Panel 0{variant}</text>
      </g>
    </g>
    '''

    if variant == 1:
        body = f'''
        <rect x="84" y="236" width="920" height="680" rx="44" fill="rgba(0,0,0,0.22)" stroke="rgba(255,255,255,0.16)"/>
        <rect x="1032" y="236" width="484" height="322" rx="44" fill="rgba(0,0,0,0.22)" stroke="rgba(255,255,255,0.16)"/>
        <rect x="1032" y="594" width="484" height="322" rx="44" fill="rgba(0,0,0,0.22)" stroke="rgba(255,255,255,0.16)"/>
        <g transform="translate(160,300)">
          <text x="0" y="0" font-family="Inter" font-size="28" font-weight="600" fill="rgba(255,255,255,0.90)">Concept Overview</text>
          <text x="0" y="46" font-family="Inter" font-size="20" fill="rgba(255,255,255,0.72)">Signal → Reason → Execute</text>
