def svg_escape(s: str) -> str:
    return (s.replace("&","&amp;")
             .replace("<","&lt;")
             .replace(">","&gt;")
             .replace('"',"&quot;")
             .replace("'","&apos;"))

def wrap_lines(text, width=54):
    return textwrap.wrap(text, width=width)

def pick_icon(slug, category):
    s = slug.lower()
    if "deception" in s or category == "Cybersecurity" or "fraud" in s:
        return "shield"
    if "secbot" in s or "recruitment" in s:
        return "bots"
    if "document" in s or "audit" in s or "report" in s:
        return "doc"
    if "twin" in s or "treasury" in s or "finance" in s or "fpa" in s:
        return "finance"
    if "biodiversity" in s:
        return "leaf"
    if "rl" in s:
        return "brain"
    if "workstation" in s:
        return "gpu"
    if "voice" in s:
        return "mic"
    if "persona" in s or "switching" in s:
        return "switch"
    if "crowd" in s:
        return "crowd"
    return "chart"

